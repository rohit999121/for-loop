#include <iostream>

using namespace std;

int main()
{
   int n,i,j,k=0;
   cout << "enter no of row ";
   cin >> n;
      for(i=1;i<=n;i++)
   {
       for(j=1;j<=(n-i);j++)
       {
           cout << " ";
       }
       while(k!=(2*i-1))
       {
           cout << "*";
           k++;
       }
       k=0;
       cout << endl;
   }
    return 0;
}
